generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String?    @unique
  name      String?
  chats     Chat[]
  messages  Message[]
  contracts Contract[] // New relation to track user's contracts
}

model Chat {
  id       String    @id @default(uuid())
  title    String?
  metadata Json?
  userId   String?
  User     User?     @relation(fields: [userId], references: [id])
  Message  Message[]
}

model Message {
  id       String  @id @default(uuid())
  content  Json[]
  metadata Json?
  replyTo  String?
  chatId   String
  userId   String
  Chat     Chat    @relation(fields: [chatId], references: [id])
  User     User    @relation(fields: [userId], references: [id])
}

model Contract {
  id           String   @id @default(uuid())
  name         String
  contractCode Json     // Stores the contract source code or ABI
  metadata     Json?    // Optional metadata for the contract
  deployedAt   DateTime // Timestamp for when the contract was deployed
  userId       String
  User         User     @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ASSISTANT
}
